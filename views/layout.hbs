<script>
    function addUrlParameter(name, value) {
        var searchParams = new URLSearchParams(window.location.search)
        searchParams.set(name, value) 
        window.location.search = searchParams.toString()  
    }

    if(sessionStorage.length!=0)
        document.getElementById('cartnumber').innerHTML=sessionStorage.getItem('number')
        
    function changeCart(id){
        let value=document.getElementById('cartnumber').innerHTML;
        sessionStorage.setItem("number",parseInt(value)+1)
        document.getElementById('cartnumber').innerHTML=parseInt(value)+1;
        if(sessionStorage.getItem(id))
