<script>
  function checkPass() {
    console.log("loi pass");

    let password1 = document.getElementById("newpassword").value;
    let password2 = document.getElementById("newpassword2").value;
    if (password1 != password2) {
      document.getElementById("tb").innerHTML = "Nhập lại mật khẩu không đúng";
    }
    else if (password1.length > 5) {
      document.getElementById("tb").innerHTML = " ";
      document.getElementById("submitbutton").disabled = false;
    }
  }

  function checkPass6() {
    let password = document.getElementById("newpassword").value;
    if (password.length < 6) {
      document.getElementById("tb").innerHTML = "Mật khẩu mới phải lớn hơn 6 kí tự";
    }
  }
</script>