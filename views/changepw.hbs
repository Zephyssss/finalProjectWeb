<section class="tracking_box_area section_padding">
  <div class="container">
    <h4 class="text-center">Thay đổi mật khẩu </h4>
    <div class="row align-items-center justify-content-center">
      <form class="row contact_form" method="POST">
        <div class="col-md-12">
          <div class="form-group">
            <input type="email" id="to" class="form-control" name="username" value="{{user.username}}" readonly>
          </div>
        </div>

        <div class="col-md-12">
          <div class="form-group">
            <input type="password" class="form-control" name="newpassword" id="newpassword" placeholder="Mật khẩu Mới"
              onblur="checkPass6()" />
          </div>
        </div>
        <div class="col-md-12">
          <input type="password" class="form-control" name="newpassword2" id="newpassword2"
            placeholder="Nhập lại mật khẩu Mới" onblur="checkPass()" />
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Mật khẩu cũ" />
          </div>
        </div>
        <div class="col-md-12 text-right">
          <button type="submit" id="submitbutton" value="submit" class="btn_3" disabled>Xác Nhận </button>
        </div>
      </form>
    </div>
    <div class="row">
      <div class="col-md-4 " style="font-size: 25px;">
        Thông báo
      </div>
      <div class="col-md-7" style="font-size: 25px;">
        <span id="tb" style="color: red;"></span>
      </div>
    </div>
  </div>
</section>

